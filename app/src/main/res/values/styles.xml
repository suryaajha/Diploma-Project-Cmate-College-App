<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="backgroundColor">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="infoHeading">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/infoHeadingBackgroundColor</item>
        <item name="android:textColor">@color/infoHeadingForegroundColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="infoContent">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/infoContentBackgroundColor</item>
        <item name="android:textColor">@color/infoContentForegroundColor</item>
        <item name="android:padding">10dp</item>

        <item name="android:horizontalSpacing">5sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="whiteBackground">
        <item name="android:background">@color/whiteBackgroundColor</item>
    </style>

    <style name="transparentColor">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="defaultTopMargin">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="chatBox">

        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/message_from</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff717171</item>
        <item name="android:layout_toRightOf">@+id/triangle</item>
    </style>

</resources>
