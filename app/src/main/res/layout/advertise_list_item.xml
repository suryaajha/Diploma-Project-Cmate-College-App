<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/addvertiseImageId"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addvertiseTitleId"
            android:fontFamily="sans-serif-condensed-black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTextViewId"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Rs.40000/-"/>
            <TextView
                android:id="@+id/actualPriceTextViewId"
                android:fontFamily="sans-serif-condensed-black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Rs.600/-"/>

            <ImageButton
                android:id="@+id/addWishlistImageButtonId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                style="@style/transparentColor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addCallImageButtonId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/transparentColor"
                android:src="@mipmap/ic_launcher"/>
            <ImageButton
                android:id="@+id/addMessageImageButtonId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/transparentColor"
                android:src="@mipmap/ic_launcher"/>
            <ImageButton
                android:id="@+id/addMailImageButtonId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/transparentColor"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
